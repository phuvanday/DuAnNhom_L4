@model AssignmentC4.Areas.Admin.Models.Brand
@{
    ViewData["Title"] = "Xóa Hãng Giày";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-trash"></i> Xóa Hãng Giày</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Hãng Giày</a></li>
                <li class="breadcrumb-item active">Xóa</li>
            </ol>
        </nav>
    </div>
</div>

<div class="alert alert-danger" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa hãng giày này không?
</div>

<div class="card shadow">
    <div class="card-body">
        <h4>Thông tin hãng giày:</h4>
        <hr>

        <div class="row">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <div class="col-md-3">
                    <img src="@Model.LogoUrl" alt="@Model.Name" class="img-fluid img-thumbnail" />
                </div>
            }

            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-3">Tên hãng:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Mô tả:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Trạng thái:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">
                            @(Model.IsActive ? "Hoạt động" : "Ngừng")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Ngày tạo:</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
        </div>

        <hr>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xác Nhận Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
        </form>
    </div>
</div>