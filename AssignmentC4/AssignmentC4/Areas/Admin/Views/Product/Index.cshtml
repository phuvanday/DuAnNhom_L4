@model IEnumerable<AssignmentC4.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Thêm sản phẩm</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ảnh</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.MaSP</td>
                <td><img src="/images/@p.HinhAnhDaiDien" style="width:60px;height:60px;object-fit:cover" /></td>
                <td>@p.TenSanPham</td>
                <td>@p.GiaCoBan.ToString("N0") VNĐ</td>
                <td>@(p.Variants?.Sum(v => v.SoLuong) ?? p.SoLuong)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.MaSP" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@p.MaSP" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
