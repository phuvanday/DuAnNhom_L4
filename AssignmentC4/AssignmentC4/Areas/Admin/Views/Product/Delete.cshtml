@model AssignmentC4.Models.Product
@{
    ViewData["Title"] = "Xóa Sản Phẩm";
}

<h2>Xóa Sản Phẩm</h2>

<div>
    <p>Bạn có chắc muốn xóa sản phẩm <strong>@Model.TenSanPham</strong> không?</p>
    @if (!string.IsNullOrEmpty(Model.HinhAnhDaiDien))
    {
        <img src="~/images/@Model.HinhAnhDaiDien" class="img-thumbnail" style="max-width:150px;" />
    }
</div>

<form asp-action="Delete" asp-route-id="@Model.MaSP" method="post">
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
