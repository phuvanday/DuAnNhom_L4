@model AssignmentC4.Areas.Admin.Models.News
@{
    ViewData["Title"] = "Thêm Tin Tức";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2><i class="fas fa-plus-circle"></i> Thêm Tin Tức Mới</h2>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu Đề <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề tin tức" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Slug" class="control-label">Slug (URL) <span class="text-danger">*</span></label>
                <input asp-for="Slug" class="form-control" placeholder="vd: khuyen-mai-mua-he-2025" />
                <span asp-validation-for="Slug" class="text-danger"></span>
                <small class="form-text text-muted">URL thân thiện cho SEO</small>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label">Danh Mục <span class="text-danger">*</span></label>
                        <select asp-for="Category" class="form-control">
                            <option value="">-- Chọn danh mục --</option>
                            <option value="Tin tức">Tin tức</option>
                            <option value="Khuyến mãi">Khuyến mãi</option>
                            <option value="Hướng dẫn">Hướng dẫn</option>
                            <option value="Review">Review sản phẩm</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Author" class="control-label">Tác Giả</label>
                        <input asp-for="Author" class="form-control" placeholder="Tên tác giả" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label">Mô Tả Ngắn <span class="text-danger">*</span></label>
                <textarea asp-for="ShortDescription" class="form-control" rows="3" placeholder="Mô tả ngắn gọn về tin tức..."></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label">Nội Dung <span class="text-danger">*</span></label>
                <textarea asp-for="Content" class="form-control" rows="10" placeholder="Nội dung chi tiết..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Hình Ảnh</label>
                <input type="file" name="imageFile" class="form-control-file" accept="image/*" />
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="IsPublished" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsPublished" class="form-check-label">
                            Xuất bản ngay
                        </label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                        <label asp-for="IsFeatured" class="form-check-label">
                            Tin nổi bật
                        </label>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu Tin Tức
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
