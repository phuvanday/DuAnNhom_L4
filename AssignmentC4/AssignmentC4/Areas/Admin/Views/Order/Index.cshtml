@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-shopping-cart"></i> Quản Lý Đơn Hàng</h2>
    </div>
    <div class="col-md-6 text-right">
        <div class="btn-group">
            <a asp-action="Index" asp-route-status="all" class="btn btn-sm @(ViewBag.Status == "all" ? "btn-primary" : "btn-outline-primary")">
                Tất cả
            </a>
            <a asp-action="Index" asp-route-status="Pending" class="btn btn-sm @(ViewBag.Status == "Pending" ? "btn-warning" : "btn-outline-warning")">
                Chờ xử lý
            </a>
            <a asp-action="Index" asp-route-status="Confirmed" class="btn btn-sm @(ViewBag.Status == "Confirmed" ? "btn-info" : "btn-outline-info")">
                Đã xác nhận
            </a>
            <a asp-action="Index" asp-route-status="Shipping" class="btn btn-sm @(ViewBag.Status == "Shipping" ? "btn-primary" : "btn-outline-primary")">
                Đang giao
            </a>
            <a asp-action="Index" asp-route-status="Delivered" class="btn btn-sm @(ViewBag.Status == "Delivered" ? "btn-success" : "btn-outline-success")">
                Đã giao
            </a>
            <a asp-action="Index" asp-route-status="Cancelled" class="btn btn-sm @(ViewBag.Status == "Cancelled" ? "btn-danger" : "btn-outline-danger")">
                Đã hủy
            </a>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách Hàng</th>
                        <th>Điện Thoại</th>
                        <th>Tổng Tiền</th>
                        <th>Thanh Toán</th>
                        <th>Trạng Thái</th>
                        <th>Ngày Đặt</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.OrderCode</strong></td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td><strong>@item.FinalAmount.ToString("N0") VNĐ</strong></td>
                                <td>
                                    <span class="badge badge-info">@item.PaymentMethod</span>
                                    @if (item.IsPaid)
                                    {
                                        <span class="badge badge-success">Đã TT</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case "Pending":
                                            <span class="badge badge-warning">Chờ xử lý</span>
                                            break;
                                        case "Confirmed":
                                            <span class="badge badge-info">Đã xác nhận</span>
                                            break;
                                        case "Shipping":
                                            <span class="badge badge-primary">Đang giao</span>
                                            break;
                                        case "Delivered":
                                            <span class="badge badge-success">Đã giao</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge badge-danger">Đã hủy</span>
                                            break;
                                    }
                                </td>
                                <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Chưa có đơn hàng nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
