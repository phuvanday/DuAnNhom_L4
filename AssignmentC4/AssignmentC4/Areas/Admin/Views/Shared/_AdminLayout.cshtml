        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ml-auto d-flex align-items-center">
                        <span class="mr-3">
                            <i class="far fa-user-circle"></i> Admin User
                        </span>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery - Giống User Layout -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Popper -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap 4.1 -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Admin Script -->
    <script>
        $(document).ready(function () {
            console.log("Admin panel loaded with jQuery:", $.fn.jquery);

            // Sidebar toggle
            $('#sidebarCollapse').on('click', function () {
                console.log("Toggle sidebar");
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            // Active menu highlighting
            var currentPath = window.location.pathname;
            console.log("Current path:", currentPath);

            $('#sidebar a').each(function() {
                var href = $(this).attr('href');
                if (href && currentPath.indexOf(href) > -1) {
                    $(this).parent('li').addClass('active');
                    console.log("Active menu:", href);
                }
            });

            // Log all menu links
            $('#sidebar a').on('click', function(e) {
                console.log("Menu clicked:", $(this).attr('href'));
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
