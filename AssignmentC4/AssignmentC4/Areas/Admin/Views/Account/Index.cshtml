@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-users"></i> Quản Lý Tài Khoản</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Thêm Tài Khoản
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Avatar</th>
                        <th>Tên Đăng Nhập</th>
                        <th>Họ Tên</th>
                        <th>Email</th>
                        <th>Điện Thoại</th>
                        <th>Vai Trò</th>
                        <th>Trạng Thái</th>
                        <th>Đăng Nhập Cuối</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Avatar))
                                    {
                                        <img src="@item.Avatar" alt="@item.FullName" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle fa-2x text-muted"></i>
                                    }
                                </td>
                                <td><strong>@item.Username</strong></td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                    @switch (item.Role)
                                    {
                                        case "Admin":
                                            <span class="badge badge-danger">Admin</span>
                                            break;
                                        case "Manager":
                                            <span class="badge badge-warning">Manager</span>
                                            break;
                                        case "User":
                                            <span class="badge badge-info">User</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <span class="badge @(item.IsActive ? "badge-success" : "badge-secondary")">
                                        @(item.IsActive ? "Hoạt động" : "Khóa")
                                    </span>
                                </td>
                                <td>@item.LastLogin?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-danger" : "btn-success")"
                                                onclick="return confirm('Bạn có chắc muốn @(item.IsActive ? "khóa" : "mở khóa") tài khoản này?')">
                                            <i class="fas fa-@(item.IsActive ? "lock" : "unlock")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center">Chưa có tài khoản nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>