@{
	Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
	<title>Quên mật khẩu - Giày Dép</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/style.css">
</head>
<body>
	<div class="container" style="max-width:400px; margin-top:60px;">
		<h2 class="text-center mb-4">Quên mật khẩu</h2>
		<p class="text-center">Nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>
		<form id="forgotForm" onsubmit="return validateForgot()">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" class="form-control" id="email" placeholder="Nhập email">
				<small id="emailError" class="form-text text-danger"></small>
			</div>
			<div class="form-group">
				<label for="otp">Mã OTP</label>
				<input type="text" class="form-control" id="otp" placeholder="Nhập mã OTP">
				<small id="otpError" class="form-text text-danger"></small>
			</div>
			<button type="submit" class="btn btn-primary btn-block" id="submitBtn">Gửi yêu cầu</button>
			<div class="mt-3 text-center">
				<a asp-action="Index">Quay lại đăng nhập</a>
			</div>
		</form>
	</div>

	<!-- jQuery -->
	<script src="~/js/jquery.min.js"></script>
	<!-- popper -->
	<script src="~/js/popper.min.js"></script>
	<!-- bootstrap 4.1 -->
	<script src="~/js/bootstrap.min.js"></script>
	<!-- jQuery easing -->
	<script src="~/js/jquery.easing.1.3.js"></script>
	<!-- Waypoints -->
	<script src="~/js/jquery.waypoints.min.js"></script>
	<!-- Flexslider -->
	<script src="~/js/jquery.flexslider-min.js"></script>
	<!-- Owl carousel -->
	<script src="~/js/owl.carousel.min.js"></script>
	<!-- Magnific Popup -->
	<script src="~/js/jquery.magnific-popup.min.js"></script>
	<script src="~/js/magnific-popup-options.js"></script>
	<!-- Date Picker -->
	<script src="~/js/bootstrap-datepicker.js"></script>
	<!-- Stellar Parallax -->
	<script src="~/js/jquery.stellar.min.js"></script>
	<!-- Main -->
	<script src="~/js/main.js"></script>
	<script>
		function validateForgot() {
			var email = document.getElementById('email').value.trim();
			var otp = document.getElementById('otp').value.trim();
			var valid = true;

			document.getElementById('emailError').innerText = '';
			document.getElementById('otpError').innerText = '';

			if (email === '') {
				document.getElementById('emailError').innerText = 'Vui lòng nhập email.';
				valid = false;
			}
			if (otp === '') {
				document.getElementById('otpError').innerText = 'Vui lòng nhập mã OTP.';
				valid = false;
			} else if (otp !== '123456') {
				document.getElementById('otpError').innerText = 'Mã OTP không đúng.';
				valid = false;
			}
			if (valid) {
				window.location.href = "change password.html";
			}
			return false;
		}
	</script>

</body>
</html>