@model AssignmentC4.Areas.User.Models.ContactModel
@{
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Liên hệ";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread">
                    <span><a asp-area="User" asp-controller="Home" asp-action="Index">Trang chủ</a></span> /
                    <span>Liên hệ</span>
                </p>
            </div>
        </div>
    </div>
</div>

<div id="contact" class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Gửi Lời Nhắn Cho Chúng Tôi</h3>
            <p>Chúng tôi luôn sẵn lòng lắng nghe bạn. Điền form dưới đây.</p>

            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-info">@ViewBag.ThongBao</div>
            }

            <form asp-action="Index" method="post">
                <div class="form-group">
                    <input asp-for="Ten" class="form-control" placeholder="Tên của bạn" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="TieuDe" class="form-control" placeholder="Tiêu đề" />
                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="NoiDung" class="form-control" placeholder="Nội dung"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Gửi Lời Nhắn</button>
            </form>
        </div>

        <div class="col-md-6">
            <h3>Thông tin liên hệ trực tiếp</h3>
            <p><strong>Địa chỉ:</strong> 300, Đường Hà Huy Tập, Buôn Ma Thuột, Đắk Lắk</p>
            <p><strong>Email:</strong> admin@yoursite.com</p>
            <p><strong>Điện thoại:</strong> +84 123 456 789</p>

            <h3>Bản đồ</h3>
            <iframe src="https://maps.google.com/maps?q=FPT%20Polytechnic%20T%C3%A2y%20Nguy%C3%AAn&t=&z=17&ie=UTF8&iwloc=&output=embed"
                    width="100%" height="300" style="border:0;" allowfullscreen loading="lazy"></iframe>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

